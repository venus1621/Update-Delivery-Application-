{
  "expo": {
    "name": "Bahiran Delivery Driver",
    "slug": "delivery-driver-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "deliverydriver",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bahran.deliverydriver.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to your location to show your position on the map and help you navigate to delivery locations.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs access to your location in the background to track deliveries and update your position in real-time.",
        "NSCameraUsageDescription": "This app needs camera access to scan QR codes for order verification.",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "location",
          "audio",
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "package": "com.bahran.deliverydriver.app",
      "targetSdkVersion": 35,
      "compileSdkVersion": 35,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.WAKE_LOCK",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.VIBRATE"
      ],
      "config": {
        "googleMaps": {
          "apiKey": ""
        }
      }
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Bahran Delivery to use your location for tracking deliveries.",
          "locationAlwaysPermission": "Allow Bahran Delivery to use your location in the background for real-time delivery tracking.",
          "locationWhenInUsePermission": "Allow Bahran Delivery to use your location for navigation and delivery tracking.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Bahran Delivery to access your camera to scan QR codes."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "enableProguardInReleaseBuilds": true,
            "enableShrinkResourcesInReleaseBuilds": true,
            "extraProguardRules": "-keep class com.facebook.react.** { *; }",
            "useLegacyPackaging": false
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "privacy": "https://bahirandelivery.com/privacy",
    "description": "Bahiran Delivery Driver App - Earn money by delivering food orders to customers. Real-time order tracking, navigation, and instant notifications.",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "85b437a7-ff3f-42d9-9da8-422ad1623404"
      }
    },
    "owner": "wesenbelay"
  }
}
